<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/user">

    <!-- Contenedor principal de los elementos del usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UselessParent">

        <!-- Imagen del perfil -->
        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20pt"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/imageuser"/>

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:text="@string/nombre_usuario"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Correo del usuario -->
        <TextView
            android:id="@+id/correoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:text="@string/correousuario_gmail_com" />

        <!-- Enlace para cambiar la foto de perfil -->
        <TextView
            android:id="@+id/cambiarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:text="@string/cambiar_foto_de_perfil" />

        <!-- Botón para cerrar sesión -->
        <Button
            android:id="@+id/cerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:focusable="true"
            android:text="@string/cerrar_sesion"
            android:clickable="true"/>
    </LinearLayout>

    <!-- Overlay para la guía -->
    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#AA000000"
        android:visibility="gone">

        <!-- Contenedor de la guía -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Texto de la guía -->
            <TextView
                android:id="@+id/guideText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido al perfil de usuario"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Botón para finalizar la guía -->
            <Button
                android:id="@+id/finishGuideButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar guía"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
